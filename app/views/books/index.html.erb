<p id="notice">Signed in successfully.</p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th>名前が表示されるようにする</th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>紹介文が表示されるようにする</th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "設定画面へ行く画像", books_path, class: "text-light" %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Option</h4>
        <%= f.text_area :body %>
        <%= f.submit %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">

    </div>

  </div>
</div>

