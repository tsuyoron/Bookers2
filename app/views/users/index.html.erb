<p id="notice">Signed in successfully.</p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <!--User infoに関する記載-->
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>

        </tbody>
      </table>
      <div class="row">
        <!--Iconをlink_toを利用して表示させる方法が分からない-->
        <%= link_to books_path, class: "btn btn-outline-secondary btn-block",method: :get do%>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <!--New bookに関する記載-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        <label for="book_title">Title</label>
        <%= f.text_field :title ,class: "form-control book_title" %>
        <label for="book_opinion">Option</label>
        <%= f.text_area :body ,class: "form-control book_body"%>
        <%= f.submit "Create Book" ,class: "btn btn-success" %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
        <tbody>
          <% @books.each do |book| %>

            <% if book.user_id.to_s == params[:id].to_s %>
              <tr>
                <td>
                  <%= link_to index_user_path(book.user_id) do %>
                    <%= image_tag book.user.get_profile_image(100,100) %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                </td>
                <td>
                    <%= book.body %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>

